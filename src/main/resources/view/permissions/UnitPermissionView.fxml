<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Box?>
<?import org.openbase.bco.bcozy.view.*?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.openbase.bco.bcozy.permissions.UnitPermissionController"
            styleClass="detail-menu">

    <TableView fx:id="permissionsTable"
               AnchorPane.bottomAnchor="95.0" AnchorPane.leftAnchor="4.0" AnchorPane.rightAnchor="5.0"
               AnchorPane.topAnchor="5.0">
        <columns>
            <TableColumn fx:id="groupColumn">
                <graphic>
                    <ObserverLabel>usergroups</ObserverLabel>
                </graphic>
                <cellValueFactory>
                    <PropertyValueFactory property="groupName"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="accessColumn">
                <graphic>
                    <ObserverLabel>accessRight</ObserverLabel>
                </graphic>
                <cellValueFactory>
                    <PropertyValueFactory property="access"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="readColumn">
                <graphic>
                    <ObserverLabel>readRight</ObserverLabel>
                </graphic>
                <cellValueFactory>
                    <PropertyValueFactory property="read"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="writeColumn">
                <graphic>
                    <ObserverLabel>writeRight</ObserverLabel>
                </graphic>
                <cellValueFactory>
                    <PropertyValueFactory property="write"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <VBox fx:id="hbox" layoutX="8.0" layoutY="268.0" prefWidth="250.0" spacing="10">
        <fx:include fx:id="ownerPermissions" source="OwnerPermissionsView.fxml"/>

        <HBox>
            <ObserverLabel>other</ObserverLabel>

            <ObserverLabel labelFor="${otherRead}">readRight</ObserverLabel>
            <CheckBox fx:id="otherRead"/>

            <ObserverLabel labelFor="${otherWrite}">writeRight</ObserverLabel>
            <CheckBox fx:id="otherWrite"/>

            <ObserverLabel labelFor="${otherAccess}">accessRight</ObserverLabel>
            <CheckBox fx:id="otherAccess"/>
        </HBox>

    </VBox>

    <ObserverButton fx:id="saveRightsButton" identifier="save" layoutY="302.0" mnemonicParsing="false"
                    styleClass="transparent-button"
                    onAction="#save"/>
</AnchorPane>
